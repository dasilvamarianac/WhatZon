<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.andapp.csc380.whatzon.EventDetail"
    android:background="#ffffffff">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="168dp"
        android:layout_below="@+id/txtName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/txtName"
        android:textStyle="bold"
        android:layout_below="@+id/btnYes"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="02/02/15"
        android:id="@+id/txtDate"
        android:layout_marginTop="65dp"
        android:textColor="#ff000000"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="14h"
        android:id="@+id/txtTime"
        android:layout_below="@+id/txtDate"
        android:textColor="#ff000000"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description"
        android:id="@+id/txtDescription"
        android:layout_alignRight="@+id/txtTime"
        android:layout_alignEnd="@+id/txtTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:phoneNumber="false"
        android:layout_alignParentBottom="true"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Adress"
        android:id="@+id/txtAdress"
        android:textColor="#ff000000"
        android:layout_above="@+id/txtDescription"
        android:layout_toEndOf="@+id/btnMenu" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnMenu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/menu_purple"
        android:layout_alignBottom="@+id/btnYes"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnNo"
        android:adjustViewBounds="false"
        android:background="@drawable/no"
        android:layout_above="@+id/txtName"
        android:layout_alignEnd="@+id/txtDescription" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnYes"
        android:background="@drawable/yes"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/txtDate" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:id="@+id/btnMaps"
        android:background="@drawable/map"
        android:layout_alignTop="@+id/txtAdress"
        android:layout_alignParentStart="true" />

</RelativeLayout>
