<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="suny.com.softwareeng.UserProfile"
    android:background="@drawable/fundo"
    android:id="@+id/Profile">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/menuBtn"
        android:background="@drawable/menu_purple"
        android:layout_alignParentTop="true" />

    <com.facebook.widget.ProfilePictureView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/picture"
        android:layout_marginTop="45dp"
        android:longClickable="false"
        android:layout_below="@+id/menuBtn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Interests: "
        android:id="@+id/Intesrests"
        android:textStyle="bold"
        android:textColor="#ff6e058f"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="tags"
        android:id="@+id/tags"
        android:textColor="#ff6e058f"
        android:layout_alignBottom="@+id/Intesrests"
        android:layout_toEndOf="@+id/Intesrests" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="name"
        android:id="@+id/name"
        android:textColor="#ff6e058f"
        android:layout_marginTop="59dp"
        android:textStyle="bold"
        android:layout_below="@+id/picture"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
