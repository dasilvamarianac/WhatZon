<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="suny.com.softwareeng.Preferences"
    android:background="@drawable/fundo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Search Options"
        android:id="@+id/textView8"
        android:textColor="#ff730a8f"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:layout_below="@+id/menuBtn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Distance (Miles)"
        android:id="@+id/textView9"
        android:textColor="#ff730a8f"
        android:textIsSelectable="false"
        android:layout_below="@+id/menuBtn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:indeterminateDuration="@android:integer/config_longAnimTime"
        android:max="500"
        android:mirrorForRtl="true"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Event Times"
        android:id="@+id/textView10"
        android:textColor="#ff730a8f"
        android:textIsSelectable="false"
        android:layout_below="@+id/seekBar"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/radioGroup"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Now"
            android:id="@+id/radioButton"
            android:textColor="#ff730a8f" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next 3 Hours"
            android:id="@+id/radioButton2"
            android:textColor="#ff730a8f" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:id="@+id/radioButton3"
            android:textColor="#ff730a8f" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This Week"
            android:id="@+id/radioButton4"
            android:textColor="#ff730a8f" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This Month"
            android:id="@+id/radioButton5"
            android:textColor="#ff730a8f" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Time"
            android:id="@+id/radioButton6"
            android:textColor="#ff730a8f" />
    </RadioGroup>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/menuBtn"
        android:background="@drawable/menu_purple"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Interests"
        android:id="@+id/textView11"
        android:textColor="#ff730a8f"
        android:textIsSelectable="false"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Education"
        android:id="@+id/checkBox"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ff730a8f" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:id="@+id/checkBox2"
        android:layout_alignTop="@+id/checkBox"
        android:layout_toEndOf="@+id/textView9"
        android:textColor="#ff730a8f" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movies"
        android:id="@+id/checkBox3"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentStart="true"
        android:textColor="#ff730a8f" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music"
        android:id="@+id/checkBox4"
        android:layout_below="@+id/checkBox3"
        android:layout_alignParentStart="true"
        android:textColor="#ff730a8f" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Party"
        android:id="@+id/checkBox5"
        android:layout_below="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox2"
        android:textColor="#ff730a8f" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Politics"
        android:id="@+id/checkBox6"
        android:layout_alignBaseline="@+id/checkBox4"
        android:layout_alignBottom="@+id/checkBox4"
        android:layout_alignStart="@+id/checkBox5"
        android:textColor="#ff730a8f" />

</RelativeLayout>
